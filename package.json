{
    "name": "ptrs-website",
    "version": "1.0.0",
    "scripts": {
        "build:scss": "sass src/scss:dist/css --no-source-map",
        "watch:scss": "sass --watch src/scss:dist/css --no-source-map",
        "copy:index": "cpx \"src/index.html\" dist",
        "copy:components": "mkdir dist\\components 2>nul & cpx \"src/components/*.html\" dist/components",
        "copy:js": "mkdir dist\\js 2>nul & cpx \"src/js/*.js\" dist/js",
        "copy:assets": "npm run copy:index && npm run copy:components && npm run copy:js",
        "build": "npm run build:scss && npm run copy:assets",
        "watch:assets": "chokidar \"src/**/*.{html,js}\" -c \"npm run copy:assets\"",
        "live": "live-server dist --port=8080",
        "dev": "npm run build && npm-run-all --parallel watch:scss watch:assets live"
    },
    "devDependencies": {
        "sass": "^1.77.0",
        "npm-run-all": "^4.1.5",
        "chokidar-cli": "^3.0.0",
        "live-server": "^1.2.2",
        "cpx": "^1.5.0"
    }
}
